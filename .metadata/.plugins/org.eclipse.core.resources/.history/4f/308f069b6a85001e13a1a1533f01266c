package com.skillstorm.fridayProj;

import java.util.Scanner; 

public class cakeTree {

	public static void main (String[] args) {
		
		boolean isSpoiled = false; 
		
		boolean hasUsedByDatePassed = false;
		
		boolean useByDateMoreThan3Days = false;
		
		boolean funnySmell = false;
		
		if (!hasUsedByDatePassed) {
			// Not spoiled?
			isSpoiled = true;
			
		} else if (!useByDateMoreThan3Days) {
			isSpoiled = false;
			
		} else if (!funnySmell) {
			isSpoiled = false;
		} else {
			isSpoiled = true;
		}
		
		System.out.println("Is the milk spoiled? " + isSpoiled);
			
			
			
		Scanner askScan = new Scanner(System.in);
		
		System.out.println("has the use-by date passed?");
		
		System.out.println("Was the use-by date more than 3 days ago?");
		System.out.println("Does it smell off?");
		
	}
}
