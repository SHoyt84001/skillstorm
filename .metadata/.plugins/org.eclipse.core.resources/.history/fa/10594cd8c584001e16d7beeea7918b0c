package com.skillstorm.mathFunctions;

import java.util.Scanner;

public class SimpleInterest {
	public static void main (String[] args) {
		
		// Simple Interest Calculator
		// It needs to ask the user for their principal, rate (as a percentage), and the amount of time
		// Print out the results with 2 decimal places
		
		
		//  A = P + I = P + (Prt)
		//  A = P(1 + rt)
		//
		//	A = Total Accrued Amount (principal + interest)
		//	P = Principal Amount
		//	I = Interest Amount
		//	r = Rate of Interest per year in decimal; r = R/100
		//	R = Rate of Interest per year as a percent; R = r * 100
		//	t = Time Period involved in months or years

		
		
		Scanner simpleScan = new Scanner(System.in);
		
		// Principal is P
		System.out.print("Please provide your principal. >");
		double principal = simpleScan.nextDouble();
		
		// Interest is r
		System.out.print("Please provide your interest rate per year. >");
		double interestRate = simpleScan.nextDouble() / 100;
		
		// years is t
		System.out.print("How many years will the loan be out for? >");
		double years = simpleScan.nextDouble();
		
		// accrued is A = P(1 + ir)
		double accrued = principal * (1 + (interestRate * years));
		
		// 
		System.out.print("This is your loan: " + (accrued - principal));
		System.out.print("This is your simple interest amount: " + accrued);
	
		
		simpleScan.close();
	}
}

class CompoundInterest{
	public static void main (String[] args) {
		// it needs to ask the user for the principal, interest rate, 
		// number of times per year the interest is compounded, 
		// and the time in years
		
		// A = P(1 + r/n)^nt
		//
		// A = Principal(amount) + Interest(amount)
		// 
		// 
		
		Scanner compScan = new Scanner(System.in);
		
		// Principal payment will be added to interest amount for Accrued
		System.out.println("Please provide your principle payment. >");
		double principal = compScan.nextDouble();
		
		System.out.println("Please provide your yearly interest rate. >");
		double interestRate = compScan.nextDouble() / 100;
		
		System.out.println("How many years is your loan out for? >");
		int years = compScan.nextInt();
		
		double accruedAmt = Math.pow(interestRate, years) * (1 + (interestRate / years));
		
		System.out.println("This should be your compound interest number: " + accruedAmt);
		
		
		
		
		
		
	}
}