package com.skillstorm.fridayProj; 

public class cakeTree {

	public static void main (String[] args) {
		
		boolean isSpoiled = false; 
		
		boolean hasUsedByDatePassed = false;
		
		boolean useByDateMoreThan3Days = false;
		
		boolean funnySmell = false;
		
		if (!hasUsedByDatePassed) {
			// Not spoiled?
			isSpoiled = true;
			
		} else if (!useByDateMoreThan3Days) {
			isSpoiled = false;
			
		} else if (!funnySmell) {
			isSpoiled = false;
		} else {
			isSpoiled = true;
		}
		
		System.out.println("Is the milk spoiled? " + isSpoiled);
			
		
	}
}
